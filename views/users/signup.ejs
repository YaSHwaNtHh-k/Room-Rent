<% layout(("/layouts/boilerplate.ejs")) %>
<h3 class="heading">Signup</h3>
<div class="cont">
    <form action="/signup" method="post" class="g-3 needs-validation register" novalidate>
      <label for="email" class="form-label">Email</label>
      <input type="email" name="email" placeholder="Enter Email Id" class="form-control" required>
      <div class="invalid-feedback">
          Please Enter Email ID
        </div>
        <label for="username" class="form-label">Username</label>
      <input type="text" name="username" placeholder="Enter Username" class="form-control" required>
      <div class="invalid-feedback">
          Please Enter Username
        </div>
        <label for="password" class="form-label">Password</label>
      <input type="password" name="password" placeholder="Enter Password" class="form-control" required>
      <div class="invalid-feedback">
          Please Enter Password
        </div>
      <div class="btn-user">
        <button class="btn btn-outline-success register-btn" type="submit">Submit</button>
        <a style="margin-left: 3vw;" href="/login">Already a User</a>
      </div>
  </form>
</div>