<% if(success.length) {%>
    <div class="alert alert-info d-flex justify-content-center mt-5 p-4 alert-dismissible fade show" role="alert">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>
<% if(failure.length) {%>
    <div class="alert alert-danger d-flex justify-content-center mt-5 p-4 alert-dismissible fade show" role="alert">
        <%= failure %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>